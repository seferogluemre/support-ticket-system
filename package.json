{
  "name": "@onlyjs/monorepo",
  "scripts": {
    "build": "turbo build",
    "build:api": "turbo run build --filter=@onlyjs/api",
    "build:web": "turbo run build --filter=@onlyjs/web",
    "dev": "turbo run dev serve --parallel",
    "dev:web": "turbo run dev --filter=@onlyjs/web",
    "dev:api": "turbo run serve --filter=@onlyjs/api",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "description": "A barebones Turborepo example for working with Task Graphs.",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.49.0",
    "cross-env": "^10.1.0",
    "date-fns": "^4.1.0",
    "nanoid": "^5.1.6",
    "syncpack": "^13.0.4",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@faker-js/faker": "^10.0.0",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.17",
    "bun-types": "^1.3.4",
    "globals": "^16.3.0",
    "knip": "^5.63.1",
    "patch-package": "^8.0.0",
    "tsconfig-custom": "latest",
    "turbo": "^2.5.6",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@sinclair/typebox": "0.34.41"
  },
  "packageManager": "bun@1.3.4",
  "private": true,
  "resolutions": {
    "@babel/parser": "7.26.9",
    "@babel/core": "7.26.9",
    "date-fns": "^4.1.0",
    "typescript": "^5.8.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2"
  },
  "trustedDependencies": [
    "@onlyjs/db/client",
    "@prisma/client",
    "@prisma/engines",
    "@swc/core",
    "esbuild",
    "prisma",
    "sharp"
  ],
  "workspaces": ["apps/*", "packages/**"],
  "patchedDependencies": {
    "dts-bundle-generator@9.5.1": "patches/dts-bundle-generator@9.5.1.patch"
  }
